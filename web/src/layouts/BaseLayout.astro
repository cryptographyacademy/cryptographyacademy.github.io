---
import '../styles/global.css';
import { SocialIcons } from '../components/SocialIcons';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Learn cryptography with formal proofs in Lean 4',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.11/dist/katex.min.css"
      integrity="sha384-nB0miv6/jRmo5EGIE6RDQE0etf4GvjBR1bkf4pcUk2TprLGa0k7/rJkRnCu6WSt6"
      crossorigin="anonymous"
    />
    <script
      is:inline
      defer
      src="https://cdn.jsdelivr.net/npm/katex@0.16.11/dist/katex.min.js"
    ></script>
    <title>{title} | Cryptography Academy</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="bg-gray-800 border-b border-gray-700">
      <nav class="max-w-7xl mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a
            href="/"
            class="flex items-center gap-3 text-white hover:text-blue-400"
          >
            <img src="/logo.svg" alt="Cryptography Academy" class="h-8 w-8" />
            <span class="font-semibold text-lg">Cryptography Academy</span>
          </a>
          <ul class="flex items-center gap-6 text-gray-300">
            <li>
              <a href="/foundations" class="hover:text-white">Foundations</a>
            </li>
            <li>
              <a href="/primitives" class="hover:text-white">Primitives</a>
            </li>
            <li><a href="/proofs" class="hover:text-white">Proofs</a></li>
            <li><a href="/papers" class="hover:text-white">Papers</a></li>
            <li><a href="/about" class="hover:text-white">About</a></li>
            <li>
              <a
                href="https://github.com/badaas/cryptography.academy"
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-white"
              >
                GitHub
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <main class="flex-1 max-w-7xl mx-auto px-6 md:px-8 py-12 md:py-16 w-full">
      <slot />
    </main>

    <footer class="bg-gray-800 border-t border-gray-700 mt-auto">
      <div class="max-w-7xl mx-auto px-4 py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <div class="flex items-center gap-3 mb-3">
              <img src="/logo.svg" alt="Cryptography Academy" class="h-8 w-8" />
              <h3 class="font-semibold text-white">Cryptography Academy</h3>
            </div>
            <p class="text-gray-400 text-sm">
              An educational platform for learning cryptography with formal
              foundations in Lean 4.
            </p>
          </div>
          <div>
            <h3 class="font-semibold text-white mb-3">Links</h3>
            <ul class="space-y-2 text-sm text-gray-400">
              <li>
                <a
                  href="https://github.com/badaas/cryptography.academy"
                  class="hover:text-white">Source Code</a
                >
              </li>
              <li>
                <a href="https://leanprover.github.io/" class="hover:text-white"
                  >Lean 4</a
                >
              </li>
            </ul>
            <h3 class="font-semibold text-white mb-3 mt-6">Follow Us</h3>
            <SocialIcons client:load />
          </div>
          <div>
            <h3 class="font-semibold text-white mb-3">Developed by</h3>
            <p class="text-gray-400 text-sm mb-2">
              <a
                href="https://badaas.be"
                class="text-blue-400 hover:text-blue-300">BaDaaS</a
              >
              — A research laboratory in mathematics based in Belgium.
            </p>
            <p class="text-gray-400 text-sm">
              <a
                href="https://dannywillems.github.io"
                class="text-blue-400 hover:text-blue-300">Danny Willems</a
              >
              (<a
                href="https://twitter.com/dwillems42"
                class="text-blue-400 hover:text-blue-300">@dwillems42</a
              >) — A mathematician fighting for privacy and security on the
              Internet, while dreaming about describing the Universe with
              equations and symbols.
            </p>
          </div>
        </div>
        <div
          class="mt-8 pt-6 border-t border-gray-700 text-center text-sm text-gray-500"
        >
          &copy; {new Date().getFullYear()} Cryptography Academy. MIT License.
        </div>
      </div>
    </footer>
    <script is:inline>
      document.addEventListener("DOMContentLoaded", function () {
        /* KaTeX math rendering */
        document.querySelectorAll(".math").forEach(function (el) {
          katex.render(el.textContent, el, { throwOnError: false });
        });

        /* Lean syntax highlighting + editor chrome */
        var KEYWORDS = new Set([
          "def", "theorem", "lemma", "structure", "where",
          "import", "namespace", "end", "open", "by",
          "inductive", "instance", "class", "example",
          "let", "in", "if", "then", "else", "match",
          "with", "fun", "do", "return", "have", "show",
          "deriving", "noncomputable", "private", "protected",
          "section", "variable", "abbrev", "axiom", "opaque"
        ]);
        var TACTICS = new Set([
          "sorry", "rfl", "simp", "omega", "trivial",
          "exact", "apply", "intro", "constructor",
          "cases", "induction", "ring", "norm_num", "linarith"
        ]);
        var TYPES = new Set([
          "Prop", "Type", "Sort", "Nat", "Bool", "True",
          "False", "String", "List", "Option", "Fin",
          "Set", "Finset", "Matrix", "Function"
        ]);

        function highlightLean(codeEl) {
          var src = codeEl.textContent;
          var out = [];
          var i = 0;
          while (i < src.length) {
            if (src[i] === "/" && src[i + 1] === "-") {
              var end = src.indexOf("-/", i + 2);
              var ei = end < 0 ? src.length : end + 2;
              out.push('<span class="lean-comment">'
                + esc(src.slice(i, ei)) + "</span>");
              i = ei;
            } else if (src[i] === "-" && src[i + 1] === "-") {
              var nl = src.indexOf("\n", i);
              var ei = nl < 0 ? src.length : nl;
              out.push('<span class="lean-comment">'
                + esc(src.slice(i, ei)) + "</span>");
              i = ei;
            } else if (src[i] === '"') {
              var j = i + 1;
              while (j < src.length && src[j] !== '"') {
                if (src[j] === "\\") j++;
                j++;
              }
              out.push('<span class="lean-string">'
                + esc(src.slice(i, j + 1)) + "</span>");
              i = j + 1;
            } else if (src[i] === "#" && src[i + 1] === "[") {
              var j = src.indexOf("]", i);
              var ei = j < 0 ? src.length : j + 1;
              out.push('<span class="lean-attr">'
                + esc(src.slice(i, ei)) + "</span>");
              i = ei;
            } else if (/[0-9]/.test(src[i])
              && (i === 0 || !/[\w]/.test(src[i - 1]))) {
              var j = i;
              while (j < src.length && /[0-9_]/.test(src[j]))
                j++;
              out.push('<span class="lean-number">'
                + esc(src.slice(i, j)) + "</span>");
              i = j;
            } else if (/[A-Za-z_]/.test(src[i])) {
              var j = i;
              while (j < src.length
                && /[A-Za-z0-9_']/.test(src[j])) j++;
              var w = src.slice(i, j);
              if (KEYWORDS.has(w))
                out.push('<span class="lean-keyword">'
                  + esc(w) + "</span>");
              else if (TACTICS.has(w))
                out.push('<span class="lean-tactic">'
                  + esc(w) + "</span>");
              else if (TYPES.has(w))
                out.push('<span class="lean-type">'
                  + esc(w) + "</span>");
              else
                out.push(esc(w));
              i = j;
            } else if ("\u2115\u2124\u211D\u2102\u211A"
              .indexOf(src[i]) >= 0) {
              out.push('<span class="lean-type">'
                + esc(src[i]) + "</span>");
              i++;
            } else {
              out.push(esc(src[i]));
              i++;
            }
          }
          codeEl.innerHTML = out.join("");
        }

        function esc(s) {
          return s.replace(/&/g, "&amp;")
            .replace(/</g, "&lt;")
            .replace(/>/g, "&gt;");
        }

        document.querySelectorAll("code.language-lean")
          .forEach(function (codeEl) {
            highlightLean(codeEl);
            var pre = codeEl.parentElement;
            var wrapper = document.createElement("div");
            wrapper.className = "lean-editor";
            var header = document.createElement("div");
            header.className = "lean-editor-header";
            var badge = document.createElement("span");
            badge.className = "lean-editor-badge";
            badge.textContent = "Lean 4";
            var copyBtn = document.createElement("button");
            copyBtn.className = "lean-editor-copy";
            copyBtn.textContent = "Copy";
            copyBtn.addEventListener("click", function () {
              navigator.clipboard.writeText(
                codeEl.textContent);
              copyBtn.textContent = "Copied!";
              setTimeout(function () {
                copyBtn.textContent = "Copy";
              }, 2000);
            });
            header.appendChild(badge);
            header.appendChild(copyBtn);
            pre.parentNode.insertBefore(wrapper, pre);
            wrapper.appendChild(header);
            wrapper.appendChild(pre);
          });
      });
    </script>
  </body>
</html>
